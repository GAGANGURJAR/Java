import java.util.Scanner;

public  class raunak {
    public static  int findelement(int[] array , int element){
        for (int i=0 ; i <array.length;i++){
            if(array[i] ==element){
                return i;
            }

        }
return -1;
    }
    public static void main(String[] args) {
        Scanner  ac = new Scanner(System.in);
        System.out.println("Enter Size of Array");
        int n = ac.nextInt();
        int[] arr = new int[n];
        for (int i =0  ; i<n;i++){

            arr[i]  = ac.nextInt();
        }
        System.out.println("Enter element you want to find index value (Address)....?");
        int ele = ac.nextInt();

        System.out.println("Index Value : "+findelement(arr,ele));




    }
}
